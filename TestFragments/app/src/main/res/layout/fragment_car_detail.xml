<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:drawable/alert_light_frame">
    <TextView
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/modelNameText"
        style="?android:attr/textAppearanceLarge"
        android:padding="16dp"
        android:textIsSelectable="true"
        tools:context="com.giorgos.fragments.app.CarDetailFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mitsubishi Galant"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/brandIcon"
        android:paddingTop="16dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/brandIcon"
        android:src="@drawable/mitshubishi"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2014"
        android:id="@+id/yearText"
        android:gravity="start|left"
        android:layout_toRightOf="@+id/brandIcon"
        android:layout_below="@+id/modelNameText"
        android:typeface="sans"
        android:paddingLeft="16dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/previewIcon"
        android:layout_below="@id/yearText"
        android:layout_alignLeft="@+id/yearText"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false" />


</RelativeLayout>
